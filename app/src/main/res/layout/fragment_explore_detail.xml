<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="photo"
            type="nl.rvbsoftdev.curiosityreporting.data.Photo" />

        <variable
            name="exploreDetailViewModel"
            type="nl.rvbsoftdev.curiosityreporting.feature.explore.ExploreDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_explore_detail_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.alexvasilkov.gestures.views.GestureImageView
            android:id="@+id/selected_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:gest_doubleTapZoom="1.25"
            app:gest_maxZoom="6"
            app:imageUrl="@{exploreDetailViewModel.selectedPhoto.img_src}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillColor="?attr/icon_color_preferences"
            android:foreground="?attr/actionBarItemBackground"
            android:padding="16dp"
            android:src="@drawable/icon_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillColor="?attr/icon_color_preferences"
            android:foreground="?attr/actionBarItemBackground"
            android:padding="16dp"
            android:src="@drawable/icon_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillColor="?attr/icon_color_preferences"
            android:foreground="?attr/actionBarItemBackground"
            android:padding="16dp"
            android:src="@drawable/icon_star"
            app:layout_constraintEnd_toStartOf="@id/share_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/photo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:shadowColor="?attr/text_shadow_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@{@string/explore_detail_photo_taken_on(exploreDetailViewModel.selectedPhoto.camera.full_name, exploreDetailViewModel.selectedPhoto.earth_date, exploreDetailViewModel.selectedPhoto.sol)}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Placeholder Text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>