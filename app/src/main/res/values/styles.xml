<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorControlNormal">@color/DeepOrange</item>
        <item name="android:textColor">@color/YellowSand</item>
        <item name="colorOnPrimary">@color/DarkGrey</item>
        <item name="android:statusBarColor">@color/NearBlack</item>
        <item name="android:navigationBarColor">@color/Black</item>
        <item name="android:actionMenuTextColor">@color/Orange</item>
        <item name="colorAccent">@color/Orange</item>
        <item name="background_fragments">@drawable/background_fragments_dark</item>
        <item name="background_mission_cards">@drawable/background_mission_cards_dark</item>
        <item name="background_color_bottom_nav">@color/DarkGrey</item>
        <item name="background_color_side_nav">@color/DarkGrey</item>
        <item name="icon_color_bottom_nav">@drawable/bottom_nav_selector_color_dark</item>
        <item name="icon_color_side_nav">@drawable/bottom_nav_selector_color_dark</item>
        <item name="image_collapsing_toolbar">@drawable/image_collapsing_toolbar_dark</item>
        <item name="background_color_toolbar">@color/DarkGrey</item>
        <item name="text_color_toolbar">@color/DeepOrange</item>
        <item name="icon_color_preferences">@color/DeepOrange</item>
        <item name="android:itemBackground">@color/DarkGrey</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDark</item>
        <item name="text_shadow_color">@color/Black</item>
        <item name="android:actionOverflowButtonStyle">@style/CameraMenuIcon</item>
        <item name="color_camera_menu_icon">@color/DeepOrange</item>
        <item name="collapsed_toolbar">@color/DeepOrange</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppCompatAlertDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@color/DarkGrey</item>
        <item name="android:colorControlActivated">@color/DeepOrange</item>
    </style>

    <style name="CameraMenuIcon" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_filter</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>
    <style name="MissionDetailFragment" parent="AppTheme">
        <item name="android:statusBarColor">@color/White</item>
    </style>

    <style name="collapsed_toolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/text_color_toolbar</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">1</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="expanded_toolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/text_color_toolbar</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/Grey</item>
        <item name="android:shadowDx">-3</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToastStyleDark">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/DeepOrange</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/NearBlack</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stGravity">center</item>
        <item name="stStrokeColor">@color/DeepOrange</item>
        <item name="stRadius">25dp</item>
    </style>

    <!--Date Picker theme-->
    <style name="CR.DatePicker" parent="Widget.MaterialComponents.MaterialCalendar">
        <!-- see: https://stackoverflow.com/a/57808145/11310951 for the colors and background attributes-->
        <item name="daySelectedStyle">@style/CR.DatePicker.DaySelected</item>
        <item name="yearSelectedStyle">@style/CR.DatePicker.YearSelected</item>
        <item name="materialCalendarHeaderConfirmButton">@style/CR.DatePicker.HeaderConfirmButton</item>
        <item name="materialCalendarHeaderSelection">@style/CR.DatePicker.HeaderSelection</item>
        <item name="materialCalendarHeaderTitle">@style/CR.DatePicker.HeaderTitle</item>
        <item name="materialCalendarHeaderLayout">@style/CR.DatePicker.HeaderLayout</item>
        <item name="materialCalendarHeaderDivider">@style/CR.DatePicker.HeaderDivider</item>
        <item name="materialCalendarHeaderToggleButton">@style/CR.DatePicker.ToggleButton</item>
        <item name="materialCalendarDay">@style/CR.DatePicker.Day</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar.Day</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimary">@color/NearBlack</item>
        <item name="colorAccent">@color/Orange</item>
        <item name="colorOnPrimary">@color/YellowLightSand</item>
        <item name="colorOnSurface">@color/YellowLightSand</item>
    </style>

    <style name="CR.DatePicker.DaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/Orange</item>
        <item name="itemTextColor">@color/White</item>
        <item name="itemStrokeWidth">0dp</item>
    </style>

    <style name="CR.DatePicker.YearSelected" parent="Widget.MaterialComponents.MaterialCalendar.Year.Selected">
        <item name="itemFillColor">@color/Orange</item>
        <item name="itemTextColor">@color/White</item>
        <item name="itemStrokeWidth">0dp</item>
    </style>

    <style name="CR.DatePicker.HeaderConfirmButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderConfirmButton">
        <item name="android:textColor">@color/Grey</item>
        <item name="rippleColor">@color/Orange</item>
    </style>

    <style name="CR.DatePicker.HeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="colorPrimary">@color/Orange</item>
        <item name="android:textColor">@color/White</item>
        <item name="colorOnPrimary">@color/Grey</item>
    </style>

    <style name="CR.DatePicker.HeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/White</item>
        <item name="autoSizeMaxTextSize">15sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
    </style>

    <style name="CR.DatePicker.HeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:textAppearance">@color/White</item>
        <item name="android:background">@color/Orange</item>
    </style>

    <style name="CR.DatePicker.ToggleButton" parent="">
        <item name="android:background">@color/DeepOrange</item>
        <item name="android:tint">@color/White</item>
    </style>

    <style name="CR.DatePicker.Day" parent="Widget.MaterialComponents.MaterialCalendar.DayTextView">
        <item name="colorPrimary">@color/White</item>
        <item name="colorOnPrimary">@color/Grey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CR.DatePicker.HeaderDivider" parent="Widget.MaterialComponents.MaterialCalendar.HeaderDivider">
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/Black</item>
    </style>


</resources>
