<resources>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/DeepOrange</item>
        <item name="android:textColor">@color/YellowSand</item>

        <item name="android:statusBarColor">@color/NearerBlack</item>
        <item name="android:navigationBarColor">@color/Black</item>
        <item name="android:actionMenuTextColor">@color/DeepOrange</item>
        <item name="colorAccent">@color/DeepOrange</item>
        <item name="background_fragments">@drawable/background_fragments_dark</item>
        <item name="background_mission_cards">@drawable/background_mission_cards_dark</item>
        <item name="background_color_bottom_nav">@color/DarkerGrey</item>
        <item name="background_color_side_nav">@color/DarkerGrey</item>
        <item name="icon_color_bottom_nav">@drawable/bottom_nav_selector_color_dark
        </item>
        <item name="icon_color_side_nav">@drawable/bottom_nav_selector_color_dark</item>
        <item name="image_collapsing_toolbar">@drawable/image_collapsing_toolbar_dark</item>
        <item name="background_color_toolbar">@color/DarkerGrey</item>
        <item name="text_color_toolbar">@color/DeepOrange</item>
        <item name="icon_color_preferences">@color/DeepOrange</item>
        <item name="android:itemBackground">@color/DarkerGrey</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDark</item>
        <item name="text_shadow_color">@color/Black</item>
        <item name="android:actionOverflowButtonStyle">@style/CameraMenuIcon</item>
        <item name="color_camera_menu_icon">@color/DeepOrange</item>
        <item name="collapsed_toolbar">@color/DeepOrange</item>

    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/DarkBrown</item>
        <item name="android:textColor">@color/DarkBrown</item>
        <item name="android:statusBarColor">@color/YellowDarkSand</item>
        <item name="image_collapsing_toolbar">@drawable/image_collapsing_toolbar_light</item>
        <item name="android:navigationBarColor">@color/Black</item>
        <item name="colorAccent">@color/DarkBrown</item>
        <item name="background_fragments">@drawable/background_fragment_light</item>
        <item name="background_mission_cards">@drawable/background_mission_cards_light</item>
        <item name="background_color_bottom_nav">@color/YellowSand</item>
        <item name="background_color_side_nav">@color/YellowSand</item>
        <item name="icon_color_bottom_nav">@drawable/bottom_nav_selector_color_light
        </item>
        <item name="icon_color_side_nav">@drawable/bottom_nav_selector_color_light</item>
        <item name="background_color_toolbar">@color/YellowSand</item>
        <item name="text_color_toolbar">@color/DarkBrown</item>
        <item name="icon_color_preferences">@color/DarkBrown</item>
        <item name="android:itemBackground">@color/YellowSand</item>
        <item name="alertDialogTheme">@style/AppCompatAlertLight</item>
        <item name="text_shadow_color">@color/LightGrey</item>
        <item name="color_camera_menu_icon">@color/DarkBrown</item>
        <item name="android:actionOverflowButtonStyle">@style/CameraMenuIcon</item>
        <item name="collapsed_toolbar">@color/DarkBrown</item>

    </style>

    <style name="AppThemeDark.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppCompatAlertDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@color/DarkerGrey</item>
        <item name="android:colorControlActivated">@color/DeepOrange</item>
    </style>

    <style name="AppCompatAlertLight" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@color/YellowSand</item>
        <item name="android:colorControlActivated">@color/DarkBrown</item>
    </style>

    <style name="CameraMenuIcon" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_filter</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>

    <style name="MissionDetailFragment" parent="AppThemeDark">
        <item name="android:statusBarColor">@color/White</item>
    </style>

    <style name="collapsed_toolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/text_color_toolbar</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="expanded_toolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/text_color_toolbar</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/DarkGrey</item>
        <item name="android:shadowDx">-3</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToastStyleDark">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/DeepOrange</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/NearerBlack</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stGravity">center</item>
        <item name="stStrokeColor">@color/DeepOrange</item>
        <item name="stRadius">25dp</item>
    </style>

    <style name="ToastStyleLight">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/DarkBrown</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/YellowSand</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stGravity">center</item>
        <item name="stStrokeColor">@color/DarkBrown</item>
        <item name="stRadius">25dp</item>
    </style>

    <!--Date Picker theme-->
    <style name="CR.DatePicker" parent="Widget.MaterialComponents.MaterialCalendar">
        <!-- see: https://stackoverflow.com/a/57808145/11310951 for the colors and background attributes-->
        <item name="daySelectedStyle">@style/CR.DatePicker.DaySelected</item>
        <item name="yearSelectedStyle">@style/CR.DatePicker.YearSelected</item>
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar.Day</item>
        <item name="materialCalendarHeaderConfirmButton">@style/CR.DatePicker.HeaderConfirmButton</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarHeaderSelection">@style/CR.DatePicker.HeaderSelection</item>
        <item name="materialCalendarHeaderTitle">@style/CR.DatePicker.HeaderTitle</item>
        <item name="materialCalendarHeaderLayout">@style/CR.DatePicker.HeaderLayout</item>
        <item name="materialCalendarHeaderDivider">@style/CR.DatePicker.HeaderLayout</item>
        <item name="materialCalendarHeaderToggleButton">@style/CR.DatePicker.HeaderLayout</item>
        <item name="materialCalendarDay">@style/CR.DatePicker.Day</item>
        <item name="colorOnPrimary">@color/Orange</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="CR.DatePicker.HeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="CR.DatePicker.Day" parent="Widget.MaterialComponents.MaterialCalendar.DayTextView">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CR.DatePicker.HeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:textAppearance">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="CR.DatePicker.HeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="autoSizeMaxTextSize">16sp</item>
    </style>

    <style name="CR.DatePicker.DaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/colorAccent</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemStrokeWidth">0dp</item>
    </style>

    <style name="CR.DatePicker.YearSelected" parent="Widget.MaterialComponents.MaterialCalendar.Year">
        <item name="itemFillColor">@color/colorAccent</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemStrokeWidth">0dp</item>
    </style>

    <style name="CR.DatePicker.HeaderConfirmButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderConfirmButton">
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

</resources>
